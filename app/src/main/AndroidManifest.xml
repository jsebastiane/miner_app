<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sebastian.company.min3rapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MinerApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_miner_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_miner_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Min3rApp">
        <activity
            android:name="sebastian.company.min3rapp.ui.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1348069125113037~8300790486" />
    </application>

</manifest>