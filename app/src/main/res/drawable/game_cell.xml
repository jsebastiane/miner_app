<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient
                android:startColor="@color/purple_start"
                android:centerColor="@color/purple_middle"
                android:endColor="@color/purple_end"
                android:type="linear"
                android:angle="315" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/brand_white"/>
            <stroke android:color="@android:color/transparent" android:width="3dp"/>

        </shape>
    </item>





</layer-list>