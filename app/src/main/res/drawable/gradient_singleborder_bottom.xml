<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/purple_start"
                android:centerColor="@color/purple_middle"
                android:endColor="@color/purple_end"
                android:type="linear"
                android:angle="315" />
        </shape>
    </item>

    <item android:left="-2dp" android:top="-2dp" android:right="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/brand_darkblue_variant"/>
            <stroke android:color="@android:color/transparent" android:width="3dp"/>

        </shape>
    </item>





</layer-list>